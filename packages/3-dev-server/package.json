{
  "name": "dev-server-demo",
  "type": "module",
  "scripts": {
    "start": "pnpm build && node --env-file=.env dist/main.js",
    "dev": "node --loader ts-node/esm --env-file=.env --watch-path src/ --watch-path package.json --watch-path tsconfig.json --no-warnings=ExperimentalWarning src/main.ts",
    "build": "rm -rf ./dist && tsc"
  },
  "main": "dist/main.js",
  "engines": {
    "node": "^22.2.0"
  },
  "packageManager": "pnpm@9.5.0",
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
